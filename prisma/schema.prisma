generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model teams {
  id          String   @id
  name        String   @unique
  description String?
  code        String   @unique
  createdAt   DateTime @default(now())
  updatedAt   DateTime
  users       users[]
}

model users {
  id          String   @id
  email       String   @unique
  phoneNumber String   @unique
  password    String
  name        String
  role        Role     @default(USER)
  teamID      String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime
  teams       teams?   @relation(fields: [teamID], references: [id])

  @@index([email])
  @@index([phoneNumber])
  @@index([role])
  @@index([teamID])
}

enum Role {
  ADMIN
  MANAGER
  USER
  GUEST
}
